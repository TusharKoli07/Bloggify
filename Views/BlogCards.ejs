<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Blog HomePage Cards</title>

    <style>
      .card {
        height: 300px;
        overflow: hidden;
        margin: 8px;
      }

      .card-img-top {
        object-fit: contain;
        height: 150px;
        width: 100%;
      }

      .card-body {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
      }

      .card-title {
        margin-bottom: 0;
      }
    </style>
  </head>
  <body>
    <div class="container mt-3">
      <div class="row row-cols-4">
        <% blogs.forEach(blog => { %>
        <div class="col">
          <div class="card" style="width: 18rem; height: 300px">
            <img
              src="<%= blog.coverImageURL %>"
              class="card-img-top"
              alt="Loading.."
              style="object-fit: contain; height: 150px;"
            />
          
            <div class="card-body d-flex flex-column">
              <h5 class="card-title" style="flex-grow: 1"><%= blog.title %></h5>
              <a href="/blog/<%= blog._id %>" class="btn btn-primary mt-auto"
                >View</a
              >
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
  </body>
</html>
